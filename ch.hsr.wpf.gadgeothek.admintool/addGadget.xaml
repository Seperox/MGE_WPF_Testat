<Window x:Class="ch.hsr.wpf.gadgeothek.admintool.addGadget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.admintool"
        mc:Ignorable="d"
        Title="addGadget" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch"  Margin="5,5,5,5" VerticalAlignment="Stretch">
            <TextBlock>Name:</TextBlock>
            <TextBox Name="name" Margin="0,0,0,10"></TextBox>
            <TextBlock>Manufacturer:</TextBlock>
            <TextBox Name="manufacturer" Margin="0,0,0,10" ></TextBox>
            
            <TextBlock>Price:</TextBlock>
            <TextBox Name="price" Margin="0,0,0,10" ></TextBox>
            <Button Content="Add Gadget" Click="Button_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
